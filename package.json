{
  "name": "vscode-razd",
  "displayName": "Razd",
  "description": "Razd task runner for Visual Studio Code (Based on Task/Taskfile)",
  "homepage": "https://github.com/razd-cli/vscode-razd",
  "icon": "res/icon.png",
  "license": "MIT",
  "version": "0.4.3",
  "publisher": "razd-cli",
  "author": {
    "name": "Razd Contributors",
    "url": "https://github.com/razd-cli"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/razd-cli/vscode-razd"
  },
  "bugs": {
    "url": "https://github.com/razd-cli/vscode-razd/issues"
  },
  "keywords": [
    "razd",
    "task",
    "taskfile",
    "razdfile"
  ],
  "type": "module",
  "engines": {
    "vscode": "^1.100.0",
    "node": ">=22"
  },
  "vsce": {
    "dependencies": false,
    "useYarn": false
  },
  "packageManager": "pnpm@10.15.0+sha512.486ebc259d3e999a4e8691ce03b5cac4a71cbeca39372a9b762cb500cfdf0873e2cb16abe3d951b1ee2cf012503f027b98b6584e4df22524e0c7450d9ec7aa7b",
  "categories": [
    "Other"
  ],
  "activationEvents": [],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "vscode-razd.init",
        "title": "Initialize Razdfile",
        "category": "Razd",
        "icon": "$(plus)"
      },
      {
        "command": "vscode-razd.refresh",
        "title": "Refresh Tasks",
        "category": "Razd",
        "icon": "$(refresh)"
      },
      {
        "command": "vscode-razd.viewAsList",
        "title": "View as List",
        "category": "Razd Tree",
        "icon": "$(list-tree)"
      },
      {
        "command": "vscode-razd.viewAsTree",
        "title": "View as Tree",
        "category": "Razd Tree",
        "icon": "$(list-flat)"
      },
      {
        "command": "vscode-razd.runTask",
        "title": "Run Task",
        "category": "Razd",
        "icon": "$(play)"
      },
      {
        "command": "vscode-razd.runTaskWithArgs",
        "title": "Run Task With Args",
        "category": "Razd",
        "icon": "$(run-all)"
      },
      {
        "command": "vscode-razd.runTaskPicker",
        "title": "Run Task",
        "category": "Razd",
        "icon": "$(play)"
      },
      {
        "command": "vscode-razd.runTaskPickerWithArgs",
        "title": "Run Task With Args",
        "category": "Razd",
        "icon": "$(play)"
      },
      {
        "command": "vscode-razd.runLastTask",
        "title": "Run Last Task",
        "category": "Razd",
        "icon": "$(redo)"
      },
      {
        "command": "vscode-razd.goToDefinition",
        "title": "Go to Definition",
        "category": "Razd",
        "icon": "$(go-to-file)"
      },
      {
        "command": "vscode-razd.goToDefinitionPicker",
        "title": "Go to Definition",
        "category": "Razd",
        "icon": "$(go-to-file)"
      },
      {
        "command": "vscode-razd.openInstallation",
        "title": "Open Installation",
        "category": "Razd",
        "icon": "$(globe)"
      },
      {
        "command": "vscode-razd.openUsage",
        "title": "Open Usage",
        "category": "Razd",
        "icon": "$(globe)"
      },
      {
        "command": "vscode-razd.showDebugPanel",
        "title": "Show Debug Panel",
        "category": "Razd",
        "icon": "$(debug)"
      },
      {
        "command": "vscode-razd.runRazd",
        "title": "Run Task",
        "category": "Razd",
        "icon": "$(play)"
      }
    ],
    "viewsContainers": {
      "activitybar": [
        {
          "id": "vscode-razd",
          "title": "Razd",
          "icon": "./res/activityBarIcon.svg"
        }
      ]
    },
    "views": {
      "vscode-razd": [
        {
          "id": "vscode-razd.tasks",
          "name": "Tasks"
        }
      ]
    },
    "viewsWelcome": [
      {
        "view": "vscode-razd.tasks",
        "contents": "Task not installed. Click the button below to install it.\n[Install Task](command:vscode-razd.openInstallation)\nTo learn more about how to use Task, [read our docs](https://taskfile.dev).",
        "when": "vscode-razd:status == 'notInstalled'"
      },
      {
        "view": "vscode-razd.tasks",
        "contents": "Task is out of date. Click the button below to update it.\n[Update Task](command:vscode-razd.openInstallation)\nTo learn more about how to use Task, [read our docs](https://taskfile.dev).",
        "when": "vscode-razd:status == 'outOfDate'"
      },
      {
        "view": "vscode-razd.tasks",
        "contents": "No Taskfile found in this workspace. Click the button below to get started and initialize a new Razdfile.\n[Initialize Razdfile](command:vscode-razd.init)\nTo learn more about how to use Razd, [read our docs](https://razd-cli.github.io/docs/guide/).",
        "when": "vscode-razd:status == 'noTaskfile'"
      },
      {
        "view": "vscode-razd.tasks",
        "contents": "An error occurred while reading the Taskfile. [Check the output panel](command:vscode-razd.showDebugPanel) for more information\nTo learn more about how to use Task, [read our docs](https://taskfile.dev).",
        "when": "vscode-razd:status == 'error'"
      }
    ],
    "menus": {
      "commandPalette": [
        {
          "command": "vscode-razd.runTask",
          "when": "false"
        },
        {
          "command": "vscode-razd.runTaskWithArgs",
          "when": "false"
        },
        {
          "command": "vscode-razd.goToDefinition",
          "when": "false"
        }
      ],
      "view/title": [
        {
          "command": "vscode-razd.runRazd",
          "when": "view == vscode-razd.tasks",
          "group": "navigation@0"
        },
        {
          "command": "vscode-razd.openUsage",
          "when": "view == vscode-razd.tasks",
          "group": "navigation@1"
        },
        {
          "command": "vscode-razd.refresh",
          "when": "view == vscode-razd.tasks",
          "group": "navigation@2"
        },
        {
          "command": "vscode-razd.viewAsList",
          "when": "view == vscode-razd.tasks && vscode-razd:treeNesting",
          "group": "navigation@3"
        },
        {
          "command": "vscode-razd.viewAsTree",
          "when": "view == vscode-razd.tasks && !vscode-razd:treeNesting",
          "group": "navigation@4"
        }
      ],
      "view/item/context": [
        {
          "command": "vscode-razd.goToDefinition",
          "when": "view == vscode-razd.tasks && viewItem == taskTreeItem",
          "group": "inline@1"
        },
        {
          "command": "vscode-razd.runTask",
          "when": "view == vscode-razd.tasks && viewItem == taskTreeItem",
          "group": "inline@2"
        },
        {
          "command": "vscode-razd.runTaskWithArgs",
          "when": "view == vscode-razd.tasks && viewItem == taskTreeItem",
          "group": "inline@3"
        }
      ]
    },
    "colors": [
      {
        "id": "vscodetask.workspaceIcon",
        "description": "Color for workspace icons in the activity bar.",
        "defaults": {
          "dark": "#2e85e7",
          "light": "#2e85e7",
          "highContrast": "#2e85e7",
          "highContrastLight": "#2e85e7"
        }
      },
      {
        "id": "vscodetask.namespaceIcon",
        "description": "Color for namespace icons in the activity bar.",
        "defaults": {
          "dark": "#a677ff",
          "light": "#a677ff",
          "highContrast": "#a677ff",
          "highContrastLight": "#a677ff"
        }
      },
      {
        "id": "vscodetask.upToDateIcon",
        "description": "Color for up-to-date task icons in the activity bar.",
        "defaults": {
          "dark": "#00AA00",
          "light": "#00AA00",
          "highContrast": "#00AA00",
          "highContrastLight": "#00AA00"
        }
      },
      {
        "id": "vscodetask.outOfDateIcon",
        "description": "Color for out-of-date task icons in the activity bar.",
        "defaults": {
          "dark": "#ff9b05",
          "light": "#ff9b05",
          "highContrast": "#ff9b05",
          "highContrastLight": "#ff9b05"
        }
      },
      {
        "id": "vscodetask.primaryColor",
        "description": "Color for primary elements.",
        "defaults": {
          "dark": "#43aba2",
          "light": "#43aba2",
          "highContrast": "#43aba2",
          "highContrastLight": "#43aba2"
        }
      }
    ],
    "configuration": {
      "title": "Task configuration",
      "properties": {
        "taskfile": {
          "type": "object",
          "description": "Task configuration options.",
          "properties": {
            "updateOn": {
              "type": "string",
              "enum": [
                "save",
                "manual"
              ],
              "default": "save",
              "description": "When the list of tasks should be updated."
            },
            "path": {
              "type": "string",
              "default": "razd",
              "markdownDescription": "Path to the Razd/Task binary. Can be a binary name in your `$PATH` or an absolute path. Set to `task` to use Task CLI instead of Razd."
            },
            "outputTo": {
              "type": "string",
              "enum": [
                "output",
                "terminal"
              ],
              "default": "terminal",
              "description": "Where to print the output of tasks. Use 'terminal' for full ANSI color support and interactivity (default), or 'output' for a read-only panel."
            },
            "checkForUpdates": {
              "type": "boolean",
              "default": true,
              "description": "Check if there is a newer version of Task on startup."
            },
            "doubleClickTimeout": {
              "type": "number",
              "default": 0,
              "description": "The double-click timeout for a task in the tree view. 0 disables double-click to run. 500 is a good starting point if you want to enable it."
            },
            "tree": {
              "type": "object",
              "description": "Tree view configuration options.",
              "properties": {
                "nesting": {
                  "type": "boolean",
                  "default": true,
                  "description": "Whether to nest tasks by their namespace in the tree view."
                },
                "status": {
                  "type": "boolean",
                  "default": false,
                  "description": "Whether to show the status of tasks in the tree view (may be slow on large Taskfiles)."
                },
                "sort": {
                  "type": "string",
                  "enum": [
                    "default",
                    "alphanumeric",
                    "none"
                  ],
                  "default": "default",
                  "description": "The order in which to display tasks in the tree view."
                }
              }
            },
            "terminal": {
              "type": "object",
              "description": "Terminal configuration options. Only used when outputTo=terminal.",
              "properties": {
                "per": {
                  "type": "string",
                  "enum": [
                    "window",
                    "task"
                  ],
                  "default": "window",
                  "description": "When to spawn a new Terminal instance."
                },
                "close": {
                  "type": "string",
                  "enum": [
                    "never",
                    "onNextTask"
                  ],
                  "default": "never",
                  "description": "When to close the Terminal instance."
                }
              }
            }
          }
        }
      }
    }
  },
  "scripts": {
    "preinstall": "npx only-allow pnpm",
    "bundle": "esbuild ./src/extension.ts --bundle --outfile=out/extension.js --external:vscode --format=esm --platform=node --minify",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "pnpm run compile && pnpm run lint",
    "lint": "eslint src --ext ts",
    "test": "vscode-test",
    "package": "vsce package",
    "publish:vsce": "vsce publish --no-dependencies",
    "publish:ovsx": "ovsx publish --no-dependencies",
    "vscode:prepublish": "pnpm run bundle"
  },
  "devDependencies": {
    "@types/js-yaml": "^4.0.9",
    "@types/mocha": "10.0.10",
    "@types/node": "24.3.0",
    "@types/semver": "^7.7.0",
    "@types/vscode": "1.100.0",
    "@typescript-eslint/eslint-plugin": "8.40.0",
    "@typescript-eslint/parser": "8.40.0",
    "@vscode/test-cli": "0.0.11",
    "@vscode/test-electron": "2.5.2",
    "@vscode/vsce": "3.6.0",
    "esbuild": "0.25.9",
    "eslint": "9.34.0",
    "mocha": "11.7.1",
    "ovsx": "0.10.5",
    "typescript": "5.9.2"
  },
  "dependencies": {
    "@octokit/types": "14.1.0",
    "js-yaml": "^4.1.0",
    "octokit": "5.0.3",
    "semver": "7.7.2"
  }
}
